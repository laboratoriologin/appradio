                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="titulo"   Grid.Column="2" Style="{StaticResource TextoTituloDetalhamento}"  TextWrapping="Wrap" HorizontalAlignment="Left" Width="800" Margin="75,70,-144,0" FontFamily="Segoe UI"  Foreground="{Binding ItemVO.CorLetraNoticiaRadio}"   LineStackingStrategy="BlockLineHeight" Height="70" LineHeight="55" VerticalAlignment="Top" FontSize="82.667" FontWeight="Bold"/>
                            <TextBlock x:Name="maisInfo" Grid.Column="0" Style="{StaticResource TextoTituloDetalhamento}"  TextWrapping="Wrap" HorizontalAlignment="Left" Width="877" Margin="56,53,0,0" FontFamily="Segoe UI"  Foreground="{Binding ItemVO.CorLetraNoticiaRadio}"   Height="149" VerticalAlignment="Top" LineHeight="69.333" Grid.RowSpan="2" FontSize="82.667" FontWeight="Bold"/>
