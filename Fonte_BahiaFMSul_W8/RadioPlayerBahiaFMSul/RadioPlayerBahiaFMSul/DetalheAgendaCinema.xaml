                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="782"/>
                                    <ColumnDefinition Width="658"/>
                                </Grid.ColumnDefinitions>

                                <ListView x:Name="ListaDetalhesEvento"
                                  Grid.Column="1"
